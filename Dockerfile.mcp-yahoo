FROM python:3.11-slim
WORKDIR /app

RUN pip install fastmcp yfinance pandas numpy

COPY src/ ./src/
ENV PYTHONPATH=/app/src
RUN apt-get update && apt-get install -y --no-install-recommends wget && rm -rf /var/lib/apt/lists/*

EXPOSE 8000
CMD ["fastmcp", "run", "src/mcp_servers/yahoo_finance.py:create_yahoo_finance_server", "--transport", "http", "--host", "0.0.0.0", "--port", "8000"]
